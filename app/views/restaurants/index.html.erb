<h1>Restaurants</h1>

<p>
  <%= link_to "Add a restaurant", new_restaurant_path %>
</p>

<% @restaurants.each do |restaurant| %>

  <p>
    <span><%= link_to restaurant.name, restaurant_path(restaurant) %>
      <%= link_to "Edit", edit_restaurant_path(restaurant) %>
      <%= link_to "Delete", restaurant_path(restaurant), method: :delete, data: {confirm: "Are you sure?" } %></span>
  </p>
<% end %>